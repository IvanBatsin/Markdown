<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Main page</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New One</a>

    <% articles.forEach(item => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%- item.title %></h4>
          <div class="card-subtitle text-muted mb-2"><%- item.createdAt.toLocaleDateString() %></div>
          <div class="card-text mb-2"><%- item.description %></div>
          <a href="/articles/<%- item.slug %>" class="btn btn-info">Show artical</a>
          <form action="/articles/<%- item.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>